generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String?   @unique
  emailVerified DateTime?
  image         String?
  wallets       Wallet[]
  categories    Category[] @relation("UserCategories")
  watchlists    Watchlist[]
  accounts      Account[]
  sessions      Session[]
  financialAccounts FinancialAccount[]
  transactions  Transaction[]
  budgets       Budget[]
  goals         Goal[]
  positions     Position[]
  trades        Trade[]
  alerts        Alert[]
  createdAt     DateTime   @default(now())
  updatedAt     DateTime   @updatedAt
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime
  @@unique([identifier, token])
}

enum AccountType {
  CHECKING
  SAVINGS
  CREDIT_CARD
  CASH
  PAYMENT_APP
  INVESTMENT
}

enum TransactionType {
  INCOME
  EXPENSE
  TRANSFER
}

enum SecurityType {
  STOCK
  ETF
  REIT
  FUND
  BDR
  CRYPTO
  BOND
}

enum Currency {
  BRL
  USD
}

model Institution {
  id        String   @id @default(cuid())
  name      String
  slug      String   @unique
  website   String?
  accounts  FinancialAccount[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([slug])
}

model Wallet {
  id        String   @id @default(cuid())
  userId    String
  name      String
  currency  Currency @default(BRL)
  accounts  FinancialAccount[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
  @@index([userId])
}

model FinancialAccount {
  id             String   @id @default(cuid())
  userId         String
  walletId       String?
  institutionId  String?
  name           String
  type           AccountType
  currency       Currency @default(BRL)
  balance        Decimal  @default(0.00) @db.Decimal(20,2)
  archived       Boolean  @default(false)
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt

  user        User          @relation(fields: [userId], references: [id], onDelete: Cascade)
  wallet      Wallet?       @relation(fields: [walletId], references: [id])
  institution Institution?  @relation(fields: [institutionId], references: [id])
  transactions Transaction[]
  positions   Position[]
  trades      Trade[]

  @@index([userId])
  @@index([institutionId])
  @@index([walletId])
}

model Category {
  id        String   @id @default(cuid())
  userId    String
  name      String
  icon      String?
  isDefault Boolean  @default(false)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user         User          @relation("UserCategories", fields: [userId], references: [id], onDelete: Cascade)
  transactions Transaction[]
  budgetItems  BudgetItem[]

  @@unique([userId, name])
}

model Transaction {
  id           String          @id @default(cuid())
  userId       String
  accountId    String
  categoryId   String?
  type         TransactionType
  amount       Decimal         @db.Decimal(20,2)
  currency     Currency        @default(BRL)
  description  String?
  occurredAt   DateTime
  cleared      Boolean         @default(true)
  notes        String?
  tags         String[]
  createdAt    DateTime        @default(now())
  updatedAt    DateTime        @updatedAt

  user     User             @relation(fields: [userId], references: [id], onDelete: Cascade)
  account  FinancialAccount @relation(fields: [accountId], references: [id], onDelete: Cascade)
  category Category?        @relation(fields: [categoryId], references: [id])

  @@index([userId, occurredAt])
  @@index([accountId])
  @@index([categoryId])
}

model Budget {
  id          String   @id @default(cuid())
  userId      String
  month       Int
  year        Int
  limitAmount Decimal  @db.Decimal(20,2)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  user          User           @relation(fields: [userId], references: [id], onDelete: Cascade)
  budgetItems   BudgetItem[]

  @@unique([userId, month, year])
}

model BudgetItem {
  id         String   @id @default(cuid())
  budgetId   String
  categoryId String
  amount     Decimal  @db.Decimal(20,2)

  budget   Budget   @relation(fields: [budgetId], references: [id], onDelete: Cascade)
  category Category @relation(fields: [categoryId], references: [id], onDelete: Cascade)

  @@unique([budgetId, categoryId])
}

model Goal {
  id            String   @id @default(cuid())
  userId        String
  name          String
  targetAmount  Decimal  @db.Decimal(20,2)
  currentAmount Decimal  @default(0.00) @db.Decimal(20,2)
  dueDate       DateTime?
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
  @@index([userId])
}

model Security {
  id        String       @id @default(cuid())
  symbol    String
  type      SecurityType
  currency  Currency     @default(BRL)
  name      String?
  createdAt DateTime     @default(now())
  updatedAt DateTime     @updatedAt

  positions     Position[]
  watchlistItems WatchlistItem[]
  trades        Trade[]
  alerts        Alert[]

  @@unique([symbol])
}

model Position {
  id           String   @id @default(cuid())
  userId       String
  accountId    String
  securityId   String
  quantity     Decimal  @db.Decimal(20,6)
  avgPrice     Decimal  @db.Decimal(20,4)
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  user     User             @relation(fields: [userId], references: [id], onDelete: Cascade)
  account  FinancialAccount @relation(fields: [accountId], references: [id], onDelete: Cascade)
  security Security         @relation(fields: [securityId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([accountId])
  @@index([securityId])
}

model Trade {
  id          String   @id @default(cuid())
  userId      String
  accountId   String
  securityId  String
  quantity    Decimal  @db.Decimal(20,6)
  price       Decimal  @db.Decimal(20,4)
  side        String
  occurredAt  DateTime
  fees        Decimal  @default(0.00) @db.Decimal(20,2)

  user     User             @relation(fields: [userId], references: [id], onDelete: Cascade)
  account  FinancialAccount @relation(fields: [accountId], references: [id], onDelete: Cascade)
  security Security         @relation(fields: [securityId], references: [id], onDelete: Cascade)

  @@index([userId, occurredAt])
}

model Watchlist {
  id        String   @id @default(cuid())
  userId    String
  name      String
  items     WatchlistItem[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
  @@unique([userId, name])
}

model WatchlistItem {
  id           String   @id @default(cuid())
  watchlistId  String
  securityId   String
  orderIndex   Int      @default(0)

  watchlist Watchlist @relation(fields: [watchlistId], references: [id], onDelete: Cascade)
  security  Security  @relation(fields: [securityId], references: [id], onDelete: Cascade)

  @@unique([watchlistId, securityId])
}

model Alert {
  id         String   @id @default(cuid())
  userId     String
  securityId String
  ruleJson   Json
  active     Boolean  @default(true)
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  user     User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  security Security @relation(fields: [securityId], references: [id], onDelete: Cascade)

  @@index([userId])
}
